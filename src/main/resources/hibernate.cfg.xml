<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/attendance</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">vbvb</property>
		
		<mapping class="com.attendance.entities.Student"/>
		<mapping class="com.attendance.entities.Course"/>
		<mapping class="com.attendance.entities.Attendance"/>
	
    </session-factory>
</hibernate-configuration>
